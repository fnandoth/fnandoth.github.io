---
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Portfolio` : 'Portfolio'}</title>
    <link rel="stylesheet" href="/src/styles/layout.css" />
  </head>
  <body>
    <div class="container">
      <aside class="sidebar">
        <div class="menu">
          <div class="minimenu">
            <span class="logo">Fernando Thiele</span>
            <span class="tagline">Backend Developer</span>
          </div>
          <nav>
            <ul>
              <li><a href="/" class={Astro.url.pathname === '/' ? 'active' : ''}>Home</a></li>
              <li><a href="/projects" class={Astro.url.pathname === '/projects' ? 'active' : ''}>Projects</a></li>
            </ul>
          </nav>  
        </div>
        <footer class="contact">
          <p>Contact</p>
          <a href="mailto:fnandothiele@gmail.com">fnandothiele@gmail.com</a><br />
          <a href="https://www.linkedin.com/in/fnandoth/" target="_blank">LinkedIn</a>
        </footer>
      </aside>
      <main class="content">
        <slot />
      </main>
    </div>
  </body>
</html>
